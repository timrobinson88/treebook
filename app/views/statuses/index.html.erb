<div class="page-header">
  <h1>All of the Statuses</h1>
</div>
<%= link_to "Post new status", new_status_path, class: "btn btn-success" %>

<% @statuses.each do |status| %>
  <div class="status">
    <strong>Name</strong>
    <p><%= status.user.full_name %></p>
    <div class="meta">
      <%= link_to time_ago_in_words(status.created_at), status %>
      <span class="admin">
      <%= link_to "Edit", edit_status_path(status)%>
      <%= link_to "Delete", status, method: :delete, data: {confirm:"are you really sure?"} %>
      </span>
    </div>
  </div>
<% end %>